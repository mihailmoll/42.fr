#include <stdio.h>

void	ft_ultimate_div_mod(int *a, int *b)

{
	int h;

	h = *a;
	*a = h / *b;
	*b = h % *b;
}

int main()
{
 
	int *x;
	int *z;
	int q = 42;
	int w = 22;

	x = &q;
	z = &w;
	
	printf("%d  %d " *x,*z);
	ft_ultimate_div_mod(x,z)

}

